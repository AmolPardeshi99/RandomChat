<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clReceiverMessage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/receiver_chat_bubble"
    android:maxWidth="300dp"
    android:maxHeight="500dp"
    android:minWidth="30dp"
    android:minHeight="20dp"
    android:paddingLeft="15dp">

    <ImageView
        android:id="@+id/imgReceiver"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_user__profile"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvReceiverMessageTimeChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="10.31 pm"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvReceiverMessageChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textLongMessage"
        android:maxWidth="275dp"
        android:minWidth="30dp"
        android:padding="2dp"
        android:text="message"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tvReceiverMessageTimeChat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgReceiver" />

</androidx.constraintlayout.widget.ConstraintLayout>